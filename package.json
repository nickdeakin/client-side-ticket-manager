{
  "name": "local-tickets-ts",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build:ts": "tsc",
    "build:scss": "sass src/public/style.scss dist/public/style.css",
    "build:public": "cpy src/public/**/* !src/public/**/*.scss !src/public/**/*.ts dist/public --parents",
    "build": "npm run build:ts && npm run build:public && npm run build:scss",
    "start": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "sass": "^1.86.3",
    "typescript": "^5.8.3"
  },
  "private": true
}